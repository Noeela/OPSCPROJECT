<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.foodgenie">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/foodgenie_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/foodgenie_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.FOODGENIE">

        <!-- Launcher Activity -->
        <activity
            android:name=".Activity_home"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other Activities (no MAIN/LAUNCHER) -->
        <activity android:name=".Activity_rewards" android:exported="true" />
        <activity android:name=".Activity_side_menu" android:exported="true" />
        <activity android:name=".Activity_track_map" android:exported="true" />
        <activity android:name=".Activity_order_tracking" android:exported="true" />
        <activity android:name=".Activity_payment_confirmation" android:exported="true" />
        <activity android:name=".Activity_payment" android:exported="true" />
        <activity android:name=".Activity_order_summary" android:exported="true" />
        <activity android:name=".Activity_delivery_address" android:exported="true" />
        <activity android:name=".item_food" android:exported="true" />
        <activity android:name=".Activity_cart" android:exported="true" />
        <activity android:name=".Activity_menu_detail" android:exported="true" />
        <activity android:name=".Menu_item" android:exported="true" />
        <activity android:name=".Menu" android:exported="true" />
        <activity android:name=".Activity_home_dashboard" android:exported="true" />
        <activity android:name=".Activity_SignUp" android:exported="true" />
        <activity android:name=".Activity_login" android:exported="true" />
        <activity android:name=".MainActivity" android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key"/>
    </application>
</manifest>
