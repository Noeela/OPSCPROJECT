<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#FFFFFFFF" />  <!-- white background -->

    <!-- Rounded corners -->
    <corners android:radius="24dp" />

    <!-- Border around the search bar -->
    <stroke
        android:width="2dp"
        android:color="#FF6200EE" /> <!-- purple border -->

    <!-- Optional inner padding -->
    <padding
        android:left="12dp"
        android:right="12dp"
        android:top="8dp"
        android:bottom="8dp" />
</shape>
